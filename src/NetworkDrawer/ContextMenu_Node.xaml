<UserControl x:Class="DS.Vis.Drawer.ContextMenu_Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DS.Vis.Drawer"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
			 HorizontalAlignment="Left" VerticalAlignment="Top"
			 Background="#FFDC1B1B">
	<Grid Background="#22b456" HorizontalAlignment="Center" VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Button Name="cmdRemove" Grid.Row="0" Content="Remove" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,8,8,4" Click="cmdRemove_Click" />
		<Button Name="cmdTrack" Grid.Row="1" Content="Track" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4,8,8" Click="cmdTrack_Click" />
		<Button Name="cmdSleep" Grid.Row="2" Content="Sleep" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4,8,8" Click="cmdSleep_Click" />
	</Grid>
</UserControl>
